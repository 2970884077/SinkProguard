<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
		<item name="android:colorButtonNormal">@color/colorAccent</item>
    </style>
	<style name="Widget.FloatingActionButton.Extended" parent="android:Widget.Material.Button">
        <item name="android:textColor">@android:attr/textColorPrimaryInverse</item>
        <item name="android:background">@drawable/extended_fab_background</item>
        <item name="android:drawablePadding">12dp</item>
		<item name="android:paddingStart">12dp</item>
		<item name="android:paddingEnd">20dp</item>
		<item name="android:translationZ">0dp</item>
		<item name="android:elevation">2dp</item>
		<item name="android:stateListAnimator">@animator/fab_state_list_animator</item>
		<item name="android:drawableTint">@android:attr/textColorPrimaryInverse</item>
    </style>
</resources>
